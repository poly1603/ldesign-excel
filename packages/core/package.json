{
  "name": "@excel-renderer/core",
  "version": "0.1.0",
  "description": "Excel渲染插件核心包 - 框架无关",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest"
  },
  "keywords": [
    "excel",
    "spreadsheet",
    "renderer",
    "canvas",
    "xlsx"
  ],
  "author": "Excel Renderer Team",
  "license": "MIT",
  "dependencies": {
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "^1.0.4"
  }
}