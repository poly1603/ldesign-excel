{
  "name": "excel-viewer",
  "version": "1.0.0",
  "private": true,
  "description": "高性能 Excel 文档预览插件，支持 Vue 3",
  "author": "Excel Viewer Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/excel-viewer.git"
  },
  "keywords": [
    "excel",
    "xlsx",
    "viewer",
    "preview",
    "spreadsheet",
    "vue",
    "canvas"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter playground run dev",
    "dev:core": "pnpm --filter @excel-viewer/core run dev",
    "dev:vue": "pnpm --filter @excel-viewer/vue run dev",
    "build": "pnpm run build:core && pnpm run build:vue",
    "build:core": "pnpm --filter @excel-viewer/core run build",
    "build:vue": "pnpm --filter @excel-viewer/vue run build",
    "test": "pnpm --filter \"./packages/**\" run test",
    "lint": "eslint . --ext .ts,.tsx,.vue",
    "format": "prettier --write \"**/*.{ts,tsx,vue,json,md}\"",
    "clean": "pnpm --filter \"./packages/**\" run clean && rimraf node_modules",
    "type-check": "pnpm --filter \"./packages/**\" run type-check"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.18.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vitest": "^1.0.4"
  },
  "packageManager": "pnpm@8.11.0"
}