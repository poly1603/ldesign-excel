{
  "name": "excel-renderer",
  "version": "0.1.0",
  "private": true,
  "description": "高性能Excel渲染插件 - Monorepo",
  "author": "Excel Renderer Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter \"./packages/**\" run dev",
    "build": "pnpm --filter \"./packages/**\" run build",
    "test": "pnpm --filter \"./packages/**\" run test",
    "lint": "eslint . --ext .ts,.tsx,.vue",
    "format": "prettier --write \"**/*.{ts,tsx,vue,json,md}\"",
    "clean": "pnpm --filter \"./packages/**\" run clean && rimraf node_modules",
    "type-check": "pnpm --filter \"./packages/**\" run type-check"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.18.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vitest": "^1.0.4"
  },
  "packageManager": "pnpm@8.11.0"
}