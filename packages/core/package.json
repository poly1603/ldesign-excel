{
  "name": "@excel-viewer/core",
  "version": "1.0.0",
  "description": "高性能 Excel 文档解析和渲染引擎，与框架无关",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles/index.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "dev": "rollup -c rollup.config.js -w",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "keywords": [
    "excel",
    "xlsx",
    "xls",
    "viewer",
    "spreadsheet",
    "parser",
    "renderer"
  ],
  "author": "Excel Viewer Team",
  "license": "MIT",
  "dependencies": {
    "jszip": "^3.10.1",
    "fflate": "^0.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.1.4",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}
